<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse  navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Мастило", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Стена", "Index", "Home", new { Area = "" }, null)</li>
                        <li>@Html.ActionLink("Произведения", "Index", "Masterpiece", new { Area = "" }, null)</li>
                        <li>@Html.ActionLink("Създай", "Create", "Masterpiece", new { Area = "" }, null)</li>
                        if (User.IsInRole("Editor"))
                        {
                            <li>@Html.ActionLink("Редакция", "Index", "Approve", new { Area = "Editor" }, null)</li>
                        }
                        if (User.IsInRole("Administration"))
                        {
                            <li>@Html.ActionLink("Задай Роля", "Index", "Admin", new { Area = "Administration" }, null)</li>
                        }
                    }
                    <li>@Html.ActionLink("Explore", "Index", "Explore", new { Area = "" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="main-content">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
