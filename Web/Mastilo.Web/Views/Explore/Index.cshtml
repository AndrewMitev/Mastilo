@model IEnumerable<Mastilo.Web.ViewModels.MasterpieceViewModels.MasterpieceResponseViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Panel info</h3>
    </div>
    <div class="panel-body">
        @foreach (var masterpiece in Model)
        {
            Html.RenderPartial("_MasterpiecePartial", masterpiece);
        }
    </div>
</div>

<a href="#" id="activateModal" style="display:none;"
   data-toggle="modal"
   data-target="#basicModal"></a>

<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&close;</button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <p>One fine body…</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script> 
        $(window).scroll(function () {
            $("#activateModal").click();
        });
    </script>
}