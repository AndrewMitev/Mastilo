@model IEnumerable<MasterpieceResponseViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="masterpiecesContainer">
    @foreach (var masterpiece in Model)
    {
        Html.RenderPartial("_MasterpiecePartial", masterpiece);
    }
</div>
@section scripts{
    <script>
        $(function () {
            $('#masterpiecesContainer')
                .hide()
                .slideDown(3000);
        });
    </script>
}